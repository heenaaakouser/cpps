
#include<stdio.h>
int input(int *a,int *b,int *c)
{
printf("enter three elements:");
scanf("%d%d%d",a,b,c);
return 0;
}
int compare(int x,int y,int z)
{
  if(x<y)
  {
    if(x<z)
    {
    printf("%d is the smallest number:\n",x);
    return x;
    }
  }
    if(y<z)
    {
  printf("%d is the smallest number:\n",y);
  return y;
    }
   else 
   {
   printf("%d is the smallest number:\n",z);
   return z;
   }
 }
 int output(int b)
 {
 printf("the smallest number among the given two numbers is:%d\n",b);
 return b;
 }
 void main()
 {
 int p,q,r,s,t;
 p=input(&q,&r,&s);
 t=compare(q,r,s);
 output(t);
 }

